<%- include('../partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-box"></i> <%= title %></h2>
    <a href="/products/create" class="btn btn-primary">
        <i class="bi bi-plus"></i> Add New Product
    </a>
</div>

<% if (products.length === 0) { %>
    <div class="alert alert-info text-center">
        <i class="bi bi-info-circle"></i> No products found. 
        <a href="/products/create" class="alert-link">Create the first product</a>
    </div>
<% } else { %>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th><i class="bi bi-box"></i> Product Name</th>
                    <th><i class="bi bi-currency-dollar"></i> Price</th>
                    <th><i class="bi bi-hash"></i> Quantity</th>
                    <th><i class="bi bi-people"></i> Supplier</th>
                    <th><i class="bi bi-calculator"></i> Total Value</th>
                    <th><i class="bi bi-gear"></i> Actions</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(product => { %>
                    <tr>
                        <td>
                            <strong><%= product.name %></strong>
                        </td>
                        <td>
                            <span class="badge bg-success">$<%= product.price.toFixed(2) %></span>
                        </td>
                        <td>
                            <span class="badge bg-info"><%= product.quantity %></span>
                        </td>
                        <td>
                            <% if (product.supplier) { %>
                                <a href="/suppliers/<%= product.supplier._id %>" class="text-decoration-none">
                                    <%= product.supplier.name %>
                                </a>
                            <% } else { %>
                                <span class="text-muted">No supplier</span>
                            <% } %>
                        </td>
                        <td>
                            <span class="badge bg-warning">$<%= product.totalValue.toFixed(2) %></span>
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                <a href="/products/<%= product._id %>" class="btn btn-outline-primary">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="/products/<%= product._id %>/update" class="btn btn-outline-warning">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a href="/products/<%= product._id %>/delete" class="btn btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
<% } %>

<%- include('../partials/footer') %>
