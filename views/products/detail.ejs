<%- include('../partials/header') %>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4><i class="bi bi-box"></i> <%= title %></h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6><i class="bi bi-box"></i> Product Name</h6>
                        <p class="fs-5"><strong><%= product.name %></strong></p>
                    </div>
                    <div class="col-md-6">
                        <h6><i class="bi bi-currency-dollar"></i> Price</h6>
                        <p class="fs-5 text-success"><strong>$<%= product.price.toFixed(2) %></strong></p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <h6><i class="bi bi-hash"></i> Quantity</h6>
                        <p class="fs-5"><%= product.quantity %></p>
                    </div>
                    <div class="col-md-6">
                        <h6><i class="bi bi-calculator"></i> Total Value</h6>
                        <p class="fs-5 text-warning"><strong>$<%= product.totalValue.toFixed(2) %></strong></p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <h6><i class="bi bi-people"></i> Supplier</h6>
                        <% if (product.supplier) { %>
                            <p class="fs-5">
                                <a href="/suppliers/<%= product.supplier._id %>" class="text-decoration-none">
                                    <%= product.supplier.name %>
                                </a>
                            </p>
                        <% } else { %>
                            <p class="fs-5 text-muted">No supplier assigned</p>
                        <% } %>
                    </div>
                </div>
                <div class="d-flex justify-content-between mt-4">
                    <a href="/products" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Products
                    </a>
                    <div>
                        <a href="/products/<%= product._id %>/update" class="btn btn-warning me-2">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a href="/products/<%= product._id %>/delete" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5><i class="bi bi-info-circle"></i> Product Information</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <h6>Created</h6>
                    <p class="text-muted"><%= new Date(product.createdAt).toLocaleDateString() %></p>
                </div>
                <div class="mb-3">
                    <h6>Last Updated</h6>
                    <p class="text-muted"><%= new Date(product.updatedAt).toLocaleDateString() %></p>
                </div>
                <div class="mb-3">
                    <h6>Product ID</h6>
                    <p class="text-muted small"><%= product._id %></p>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
