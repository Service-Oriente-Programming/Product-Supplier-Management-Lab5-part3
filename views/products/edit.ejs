<%- include('../partials/header') %>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4><i class="bi bi-pencil"></i> <%= title %></h4>
            </div>
            <div class="card-body">
                <form action="/products/<%= product._id %>/update" method="POST">
                    <div class="mb-3">
                        <label for="name" class="form-label">
                            <i class="bi bi-box"></i> Product Name *
                        </label>
                        <input type="text" class="form-control <%= errors && errors.find(e => e.param === 'name') ? 'is-invalid' : '' %>" 
                               id="name" name="name" value="<%= product.name %>" 
                               autocomplete="off" required>
                        <% if (errors && errors.find(e => e.param === 'name')) { %>
                            <div class="invalid-feedback">
                                <%= errors.find(e => e.param === 'name').msg %>
                            </div>
                        <% } %>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="price" class="form-label">
                                    <i class="bi bi-currency-dollar"></i> Price *
                                </label>
                                <input type="number" step="0.01" min="0" class="form-control <%= errors && errors.find(e => e.param === 'price') ? 'is-invalid' : '' %>" 
                                       id="price" name="price" value="<%= product.price %>" 
                                       autocomplete="off" required>
                                <% if (errors && errors.find(e => e.param === 'price')) { %>
                                    <div class="invalid-feedback">
                                        <%= errors.find(e => e.param === 'price').msg %>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="quantity" class="form-label">
                                    <i class="bi bi-hash"></i> Quantity *
                                </label>
                                <input type="number" min="0" class="form-control <%= errors && errors.find(e => e.param === 'quantity') ? 'is-invalid' : '' %>" 
                                       id="quantity" name="quantity" value="<%= product.quantity %>" 
                                       autocomplete="off" required>
                                <% if (errors && errors.find(e => e.param === 'quantity')) { %>
                                    <div class="invalid-feedback">
                                        <%= errors.find(e => e.param === 'quantity').msg %>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="supplier" class="form-label">
                            <i class="bi bi-people"></i> Supplier *
                        </label>
                        <select class="form-select <%= errors && errors.find(e => e.param === 'supplier') ? 'is-invalid' : '' %>" 
                                id="supplier" name="supplier" required>
                            <option value="">Select a supplier</option>
                            <% suppliers.forEach(supplier => { %>
                                <option value="<%= supplier._id %>" 
                                        <%= product.supplier && product.supplier._id.toString() === supplier._id.toString() ? 'selected' : '' %>>
                                    <%= supplier.name %>
                                </option>
                            <% }) %>
                        </select>
                        <% if (errors && errors.find(e => e.param === 'supplier')) { %>
                            <div class="invalid-feedback">
                                <%= errors.find(e => e.param === 'supplier').msg %>
                            </div>
                        <% } %>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="/products/<%= product._id %>" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Product
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check"></i> Update Product
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
