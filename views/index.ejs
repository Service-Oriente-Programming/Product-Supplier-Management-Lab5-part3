<%- include('partials/header') %>

<div class="row">
    <div class="col-12">
        <div class="jumbotron bg-primary text-white p-5 rounded mb-4">
            <h1 class="display-4">
                <i class="bi bi-shop"></i> Welcome to Product Supplier Management
            </h1>
            <p class="lead">Search and browse products from various suppliers with user authentication.</p>
        </div>
    </div>
</div>

<!-- Search and Filter Section -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5><i class="bi bi-search"></i> Search Products</h5>
            </div>
            <div class="card-body">
                <form method="GET" action="/" class="row g-3">
                    <div class="col-md-6">
                        <label for="search" class="form-label">Search by Product Name</label>
                        <input type="text" class="form-control" id="search" name="search" 
                               value="<%= searchQuery %>" placeholder="Enter product name..." 
                               autocomplete="off">
                    </div>
                    <div class="col-md-4">
                        <label for="supplier" class="form-label">Filter by Supplier</label>
                        <select class="form-select" id="supplier" name="supplier">
                            <option value="">All Suppliers</option>
                            <% suppliers.forEach(supplier => { %>
                                <option value="<%= supplier._id %>" 
                                        <%= selectedSupplier == supplier._id ? 'selected' : '' %>>
                                    <%= supplier.name %>
                                </option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">&nbsp;</label>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-search"></i> Search
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Results Section -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5><i class="bi bi-box"></i> Products</h5>
                <% if (searchQuery || selectedSupplier) { %>
                    <a href="/" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-x-circle"></i> Clear Filters
                    </a>
                <% } %>
            </div>
            <div class="card-body">
                <% if (products.length === 0) { %>
                    <div class="alert alert-info text-center">
                        <i class="bi bi-info-circle"></i> 
                        <% if (searchQuery || selectedSupplier) { %>
                            No products found matching your search criteria.
                        <% } else { %>
                            No products available. 
                            <% if (user.isAdmin) { %>
                                <a href="/products/create" class="alert-link">Add the first product</a>
                            <% } %>
                        <% } %>
                    </div>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th><i class="bi bi-box"></i> Product Name</th>
                                    <th><i class="bi bi-currency-dollar"></i> Price</th>
                                    <th><i class="bi bi-123"></i> Quantity</th>
                                    <th><i class="bi bi-calculator"></i> Total Value</th>
                                    <th><i class="bi bi-building"></i> Supplier</th>
                                    <% if (user.isAdmin) { %>
                                        <th><i class="bi bi-gear"></i> Actions</th>
                                    <% } %>
                                </tr>
                            </thead>
                            <tbody>
                                <% products.forEach(product => { %>
                                    <tr>
                                        <td>
                                            <strong><%= product.name %></strong>
                                        </td>
                                        <td>
                                            <span class="badge bg-success">$<%= product.price %></span>
                                        </td>
                                        <td>
                                            <span class="badge bg-info"><%= product.quantity %></span>
                                        </td>
                                        <td>
                                            <span class="badge bg-warning">$<%= (product.price * product.quantity).toFixed(2) %></span>
                                        </td>
                                        <td>
                                            <a href="/suppliers/<%= product.supplier._id %>" class="text-decoration-none">
                                                <i class="bi bi-building"></i> <%= product.supplier.name %>
                                            </a>
                                        </td>
                                        <% if (user.isAdmin) { %>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a href="/products/<%= product._id %>" class="btn btn-outline-primary">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a href="/products/<%= product._id %>/update" class="btn btn-outline-warning">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <a href="/products/<%= product._id %>/delete" class="btn btn-outline-danger">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        <% } %>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-info-circle"></i> Features
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <h6><i class="bi bi-search text-primary"></i> Product Search</h6>
                        <p class="small text-muted">Search products by name and filter by supplier.</p>
                    </div>
                    <div class="col-md-3">
                        <h6><i class="bi bi-shield-check text-success"></i> User Authentication</h6>
                        <p class="small text-muted">Secure login system with sessions and cookies.</p>
                    </div>
                    <div class="col-md-3">
                        <h6><i class="bi bi-person-gear text-warning"></i> Admin Panel</h6>
                        <p class="small text-muted">Full CRUD operations for authenticated admin users.</p>
                    </div>
                    <div class="col-md-3">
                        <h6><i class="bi bi-database text-info"></i> Data Management</h6>
                        <p class="small text-muted">Persistent storage with MongoDB and Mongoose.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
