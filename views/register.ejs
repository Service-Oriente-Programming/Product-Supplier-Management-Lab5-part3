<%- include('partials/header') %>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4><i class="bi bi-person-plus"></i> Register</h4>
            </div>
            <div class="card-body">
                <form action="/auth/register" method="POST">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="username" class="form-label">
                                    <i class="bi bi-person"></i> Username *
                                </label>
                                <input type="text" class="form-control <%= errors && errors.find(e => e.param === 'username') ? 'is-invalid' : '' %>" 
                                       id="username" name="username" value="<%= oldInput ? oldInput.username : '' %>" 
                                       autocomplete="username" required>
                                <% if (errors && errors.find(e => e.param === 'username')) { %>
                                    <div class="invalid-feedback">
                                        <%= errors.find(e => e.param === 'username').msg %>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="email" class="form-label">
                                    <i class="bi bi-envelope"></i> Email *
                                </label>
                                <input type="email" class="form-control <%= errors && errors.find(e => e.param === 'email') ? 'is-invalid' : '' %>" 
                                       id="email" name="email" value="<%= oldInput ? oldInput.email : '' %>" 
                                       autocomplete="email" required>
                                <% if (errors && errors.find(e => e.param === 'email')) { %>
                                    <div class="invalid-feedback">
                                        <%= errors.find(e => e.param === 'email').msg %>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="password" class="form-label">
                                    <i class="bi bi-lock"></i> Password *
                                </label>
                                <input type="password" class="form-control <%= errors && errors.find(e => e.param === 'password') ? 'is-invalid' : '' %>" 
                                       id="password" name="password" autocomplete="new-password" required>
                                <% if (errors && errors.find(e => e.param === 'password')) { %>
                                    <div class="invalid-feedback">
                                        <%= errors.find(e => e.param === 'password').msg %>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="confirmPassword" class="form-label">
                                    <i class="bi bi-lock-fill"></i> Confirm Password *
                                </label>
                                <input type="password" class="form-control <%= errors && errors.find(e => e.param === 'confirmPassword') ? 'is-invalid' : '' %>" 
                                       id="confirmPassword" name="confirmPassword" autocomplete="new-password" required>
                                <% if (errors && errors.find(e => e.param === 'confirmPassword')) { %>
                                    <div class="invalid-feedback">
                                        <%= errors.find(e => e.param === 'confirmPassword').msg %>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="phone" class="form-label">
                            <i class="bi bi-telephone"></i> Phone Number *
                        </label>
                        <input type="tel" class="form-control <%= errors && errors.find(e => e.param === 'phone') ? 'is-invalid' : '' %>" 
                               id="phone" name="phone" value="<%= oldInput ? oldInput.phone : '' %>" 
                               autocomplete="tel" required>
                        <% if (errors && errors.find(e => e.param === 'phone')) { %>
                            <div class="invalid-feedback">
                                <%= errors.find(e => e.param === 'phone').msg %>
                            </div>
                        <% } %>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="/auth/login" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Login
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-person-plus"></i> Register
                        </button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center">
                <p class="mb-0">
                    Already have an account? 
                    <a href="/auth/login" class="text-decoration-none">
                        <i class="bi bi-box-arrow-in-right"></i> Login here
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
