<%- include('partials/header') %>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h4><i class="bi bi-question-circle"></i> Forgot Password</h4>
            </div>
            <div class="card-body">
                <form action="/auth/forgot" method="POST">
                    <div class="mb-3">
                        <label for="email" class="form-label">
                            <i class="bi bi-envelope"></i> Email Address *
                        </label>
                        <input type="email" class="form-control <%= errors && errors.find(e => e.param === 'email') ? 'is-invalid' : '' %>" 
                               id="email" name="email" value="<%= oldInput ? oldInput.email : '' %>" 
                               autocomplete="email" required>
                        <% if (errors && errors.find(e => e.param === 'email')) { %>
                            <div class="invalid-feedback">
                                <%= errors.find(e => e.param === 'email').msg %>
                            </div>
                        <% } %>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="/auth/login" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Login
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-send"></i> Send Reset Link
                        </button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center">
                <p class="mb-0">
                    Remember your password? 
                    <a href="/auth/login" class="text-decoration-none">
                        <i class="bi bi-box-arrow-in-right"></i> Login here
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
