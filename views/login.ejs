<%- include('partials/header') %>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h4><i class="bi bi-box-arrow-in-right"></i> Login</h4>
            </div>
            <div class="card-body">
                <form action="/auth/login" method="POST">
                    <div class="mb-3">
                        <label for="username" class="form-label">
                            <i class="bi bi-person"></i> Username or Email *
                        </label>
                        <input type="text" class="form-control <%= errors && errors.find(e => e.param === 'username') ? 'is-invalid' : '' %>" 
                               id="username" name="username" value="<%= oldInput ? oldInput.username : '' %>" 
                               autocomplete="username" required>
                        <% if (errors && errors.find(e => e.param === 'username')) { %>
                            <div class="invalid-feedback">
                                <%= errors.find(e => e.param === 'username').msg %>
                            </div>
                        <% } %>
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">
                            <i class="bi bi-lock"></i> Password *
                        </label>
                        <input type="password" class="form-control <%= errors && errors.find(e => e.param === 'password') ? 'is-invalid' : '' %>" 
                               id="password" name="password" autocomplete="current-password" required>
                        <% if (errors && errors.find(e => e.param === 'password')) { %>
                            <div class="invalid-feedback">
                                <%= errors.find(e => e.param === 'password').msg %>
                            </div>
                        <% } %>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <a href="/auth/forgot" class="text-decoration-none">
                            <i class="bi bi-question-circle"></i> Forgot Password?
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-box-arrow-in-right"></i> Login
                        </button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center">
                <p class="mb-0">
                    Don't have an account? 
                    <a href="/auth/register" class="text-decoration-none">
                        <i class="bi bi-person-plus"></i> Register here
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
