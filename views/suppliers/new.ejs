<%- include('../partials/header') %>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4><i class="bi bi-person-plus"></i> <%= title %></h4>
            </div>
            <div class="card-body">
                <form action="/suppliers/create" method="POST">
                    <div class="mb-3">
                        <label for="name" class="form-label">
                            <i class="bi bi-building"></i> Supplier Name *
                        </label>
                        <input type="text" class="form-control <%= errors && errors.find(e => e.param === 'name') ? 'is-invalid' : '' %>" 
                               id="name" name="name" value="<%= supplier ? supplier.name : '' %>" 
                               autocomplete="organization" required>
                        <% if (errors && errors.find(e => e.param === 'name')) { %>
                            <div class="invalid-feedback">
                                <%= errors.find(e => e.param === 'name').msg %>
                            </div>
                        <% } %>
                    </div>

                    <div class="mb-3">
                        <label for="address" class="form-label">
                            <i class="bi bi-geo-alt"></i> Address *
                        </label>
                        <textarea class="form-control <%= errors && errors.find(e => e.param === 'address') ? 'is-invalid' : '' %>" 
                                  id="address" name="address" rows="3" 
                                  autocomplete="street-address" required><%= supplier ? supplier.address : '' %></textarea>
                        <% if (errors && errors.find(e => e.param === 'address')) { %>
                            <div class="invalid-feedback">
                                <%= errors.find(e => e.param === 'address').msg %>
                            </div>
                        <% } %>
                    </div>

                    <div class="mb-3">
                        <label for="phone" class="form-label">
                            <i class="bi bi-telephone"></i> Phone *
                        </label>
                        <input type="tel" class="form-control <%= errors && errors.find(e => e.param === 'phone') ? 'is-invalid' : '' %>" 
                               id="phone" name="phone" value="<%= supplier ? supplier.phone : '' %>" 
                               autocomplete="tel" required>
                        <% if (errors && errors.find(e => e.param === 'phone')) { %>
                            <div class="invalid-feedback">
                                <%= errors.find(e => e.param === 'phone').msg %>
                            </div>
                        <% } %>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="/suppliers" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Suppliers
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check"></i> Create Supplier
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
