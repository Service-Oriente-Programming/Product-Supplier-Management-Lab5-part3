<%- include('../partials/header') %>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h4><i class="bi bi-exclamation-triangle"></i> <%= title %></h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <h5><i class="bi bi-warning"></i> Warning!</h5>
                    <p>Are you sure you want to delete this supplier?</p>
                </div>

                <div class="card mb-3">
                    <div class="card-body">
                        <h6><i class="bi bi-building"></i> Supplier Details</h6>
                        <p><strong>Name:</strong> <%= supplier.name %></p>
                        <p><strong>Address:</strong> <%= supplier.address %></p>
                        <p><strong>Phone:</strong> <%= supplier.phone %></p>
                    </div>
                </div>

                <% if (products.length > 0) { %>
                    <div class="alert alert-danger">
                        <h6><i class="bi bi-exclamation-circle"></i> Cannot Delete Supplier</h6>
                        <p>This supplier has <strong><%= products.length %></strong> associated products. Please delete or reassign these products first:</p>
                        <ul class="mb-0">
                            <% products.forEach(product => { %>
                                <li>
                                    <a href="/products/<%= product._id %>" class="text-decoration-none">
                                        <%= product.name %>
                                    </a>
                                    (Quantity: <%= product.quantity %>)
                                </li>
                            <% }) %>
                        </ul>
                    </div>
                <% } %>

                <div class="d-flex justify-content-between">
                    <a href="/suppliers/<%= supplier._id %>" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Supplier
                    </a>
                    <% if (products.length === 0) { %>
                        <form action="/suppliers/<%= supplier._id %>/delete" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you absolutely sure you want to delete this supplier? This action cannot be undone.');">
                                <i class="bi bi-trash"></i> Delete Supplier
                            </button>
                        </form>
                    <% } else { %>
                        <button type="button" class="btn btn-danger" disabled>
                            <i class="bi bi-trash"></i> Cannot Delete
                        </button>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
