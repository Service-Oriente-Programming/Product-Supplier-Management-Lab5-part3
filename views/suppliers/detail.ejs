<%- include('../partials/header') %>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4><i class="bi bi-building"></i> <%= title %></h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6><i class="bi bi-building"></i> Supplier Name</h6>
                        <p class="fs-5"><strong><%= supplier.name %></strong></p>
                    </div>
                    <div class="col-md-6">
                        <h6><i class="bi bi-telephone"></i> Phone</h6>
                        <p class="fs-5"><%= supplier.phone %></p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <h6><i class="bi bi-geo-alt"></i> Address</h6>
                        <p class="fs-5"><%= supplier.address %></p>
                    </div>
                </div>
                <div class="d-flex justify-content-between mt-4">
                    <a href="/suppliers" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Suppliers
                    </a>
                    <div>
                        <a href="/suppliers/<%= supplier._id %>/update" class="btn btn-warning me-2">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a href="/suppliers/<%= supplier._id %>/delete" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5><i class="bi bi-box"></i> Products from this Supplier</h5>
            </div>
            <div class="card-body">
                <% if (products.length === 0) { %>
                    <p class="text-muted">No products from this supplier yet.</p>
                <% } else { %>
                    <div class="list-group">
                        <% products.forEach(product => { %>
                            <a href="/products/<%= product._id %>" class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1"><%= product.name %></h6>
                                    <small class="text-success">$<%= product.price.toFixed(2) %></small>
                                </div>
                                <p class="mb-1">Quantity: <%= product.quantity %></p>
                                <small>Total Value: $<%= product.totalValue.toFixed(2) %></small>
                            </a>
                        <% }) %>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
